APP_NAME="School Management System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://admin.example.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Central Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sms_central
DB_USERNAME=root
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Tenancy Configuration
TENANCY_REDIS_PREFIX_BASE=tenant
TENANCY_CACHE_TAG_BASE=tenant
TENANCY_FILESYSTEM_SUFFIX_BASE=tenant

# Tenant Features
TENANT_MAX_TEACHERS=50
TENANT_MAX_STUDENTS=1000
TENANT_MAX_CLASSES=50
TENANT_DEFAULT_PASSWORD=password
TENANT_MAX_FILE_SIZE=10240

# Tenant Mail Configuration
TENANT_MAIL_FROM_ADDRESS=noreply@example.com
TENANT_MAIL_FROM_NAME="School Management System"

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration
QUEUE_CONNECTION=database

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=file

# Filesystem Configuration
FILESYSTEM_DISK=local

# Broadcasting Configuration
BROADCAST_DRIVER=log

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

TENANT_DB_PREFIX=null
